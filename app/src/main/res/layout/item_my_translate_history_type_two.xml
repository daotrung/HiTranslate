<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    app:cardBackgroundColor="#E8E8ED"
    app:cardCornerRadius="12sp"
    app:contentPadding="1sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgFlagInMyHistoryIn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/flag_demo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHistoryIn"
            android:layout_width="0dp"
            android:layout_height="0sp"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center|start"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/roboto"
            android:text="Hi, do you know where the nearest bar is?"
            android:textColor="#808080"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFlagInMyHistoryIn"
            app:layout_constraintEnd_toStartOf="@id/imgReturnRec"
            app:layout_constraintStart_toEndOf="@+id/imgFlagInMyHistoryIn"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryIn" />

        <ImageView
            android:id="@+id/imgFlagInMyHistoryOut"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/flag_spain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgFlagInMyHistoryIn" />

        <TextView
            android:id="@+id/txtHistoryOut"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:singleLine="true"
            android:fontFamily="@font/roboto"
            android:text="Ciao, sai dov'è il bar più vicino?"
            android:textColor="#808080"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFlagInMyHistoryOut"
            app:layout_constraintEnd_toEndOf="@id/txtHistoryIn"
            app:layout_constraintStart_toEndOf="@+id/imgFlagInMyHistoryOut"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryOut" />

        <ImageView
            android:id="@+id/imgReturnRec"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginEnd="30sp"
            android:src="@drawable/recift"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryIn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>