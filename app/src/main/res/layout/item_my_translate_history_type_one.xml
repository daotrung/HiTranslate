<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardBackgroundColor="#F2F1FE"
    app:cardCornerRadius="12sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgFlagInMyHistoryIn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/flag_demo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHistoryIn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:singleLine="true"
            android:text="How are you ?"
            android:textColor="#808080"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFlagInMyHistoryIn"
            app:layout_constraintEnd_toStartOf="@+id/imgReturnRec"
            app:layout_constraintStart_toEndOf="@+id/imgFlagInMyHistoryIn"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryIn" />

        <ImageView
            android:id="@+id/imgFlagInMyHistoryOut"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/flag_demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgFlagInMyHistoryIn" />

        <TextView
            android:id="@+id/txtHistoryOut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:singleLine="true"
            android:text="Как дела"
            android:textColor="#808080"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFlagInMyHistoryOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgFlagInMyHistoryOut"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryOut" />

        <ImageView
            android:id="@+id/imgReturnRec"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginEnd="30sp"
            android:src="@drawable/recift"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyHistoryIn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>