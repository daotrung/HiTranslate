<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/line"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:src="@drawable/line_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgFlagInMyFavoriteIn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/flag_demo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/txtFavoriteIn"
            android:layout_width="0sp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="Hi, do you know where the nearest bar is?"
            android:textColor="#808080"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFlagInMyFavoriteIn"
            app:layout_constraintEnd_toStartOf="@id/imgHeartFavorite"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imgFlagInMyFavoriteIn"
            app:layout_constraintTop_toTopOf="@+id/imgFlagInMyFavoriteIn"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgHeartFavorite"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/heart_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgFlagInMyFavoriteIn" />


        <ImageView
            android:id="@+id/imgFlagInMyFavoriteOut"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/flag_spain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgFlagInMyFavoriteIn"
            app:layout_constraintTop_toBottomOf="@id/imgFlagInMyFavoriteIn" />

        <TextView
            android:id="@+id/txtFavoriteOut"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:text="Ciao, sai dov'è il bar più vicino?"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/imgFlagInMyFavoriteOut"
            app:layout_constraintEnd_toEndOf="@id/imgHeartFavorite"
            app:layout_constraintStart_toEndOf="@id/imgFlagInMyFavoriteOut"
            app:layout_constraintTop_toTopOf="@id/imgFlagInMyFavoriteOut" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>